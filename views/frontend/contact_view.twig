
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  
<section id="contact">
	<div class="section-content">
		<h1 class="section-header">Contactez <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> Laurent BERTON</span></h1>		
	</div>
			
	<div class="contact-section">
		<div class="container">
			<form method="POST" action="/contact/" name="contact">


				<div class="col-lg-6 col-md-6 col-sm-12 form-line">

			  		<div class="form-group">
			  			<label for="exampleInputUsername">*Votre nom</label>
					    <input type="text" class="form-control" name ="name" placeholder="Entrez votre nom" required>
				  	</div>

				  	<div class="form-group">
					   	<label for="exampleInputEmail">*Adresse Email</label>
					   	<input type="email" class="form-control" name="email" id="exampleInputEmail" placeholder=" Entrez votre adresse de messagerie" required>
					</div>	

					<div class="form-group">
					   	<label for="telephone">Tel. Portable</label>
					   	<input type="tel" class="form-control" name="phone" id="telephone" placeholder="Votre numéro de téléphone portable">
			  		</div>

			  		<div class="form-group">
			  				<label for ="description">*Message</label>
			  			 	<textarea  class="form-control" name="message" id="description" placeholder="Entrez votre Message" required></textarea>
			  			</div>

			  		<script src='https://www.google.com/recaptcha/api.js'></script>
					<div class="g-recaptcha" data-sitekey="6Lf3UDIUAAAAAMpD8Nm-V2yBC9KsOh56k22I4xVE"></div><br><br>
			  			<div>

			  				<button type="submit" class="btn btn-default submit" name="valider"><i class="fa fa-paper-plane" aria-hidden="true"></i> envoyer votre message</button>
			  			</div>

			  	</div>

			  	<div class="col-lg-6 col-md-6 col-sm-12">


			  			
			  			
				</div>


			</form>

		</div>
</section>




